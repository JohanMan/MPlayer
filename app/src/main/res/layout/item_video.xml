<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_space">

    <com.johan.mplayer.view.RoundImageView
        android:id="@+id/video_image_view"
        app:round="@dimen/video_item_image_round"
        android:layout_width="@dimen/video_item_image_width"
        android:layout_height="@dimen/video_item_image_height"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/video_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/video_image_view"
        android:layout_alignTop="@id/video_image_view"
        android:textSize="@dimen/text_size_content"
        android:textColor="#333333"
        android:lines="1"
        />

    <TextView
        android:id="@+id/video_tip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/video_image_view"
        android:layout_alignBottom="@id/video_image_view"
        android:textSize="@dimen/text_size_hint"
        android:textColor="#999999"
        />

</RelativeLayout>